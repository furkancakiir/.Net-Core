using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Uygulama
{
	class Program
	{
		static void Main(string[] args)
		{

			Console.Write("İsminiz:");
			string ad = Console.ReadLine();

			Console.Write("Yaşınız:");
			int yas = int.Parse(Console.ReadLine());

			Console.WriteLine("Öğrenim Durumunuz Nedir?:");
			string egitim = Console.ReadLine();

			if (yas >= 18 && egitim == "lise" || egitim == "üniversite")
			{
				egitim.ToUpper();
				Console.WriteLine("Ehliyet Alabilme Hakkınız Vardır");

			}
			else
			{
				Console.WriteLine("18 Yaşından Küçükler ve Lise yada Üniversite Mezunu Olmayanlar EHLİYET alamaz");
			}

			//Console.ReadLine();

			Console.Write("1.Sınavı Giriniz");
			int sınav1 = int.Parse(Console.ReadLine());


			Console.Write("2.Sınavı Giriniz");
			int sınav2 = int.Parse(Console.ReadLine());


			Console.Write("Sozlu Notunu Kullanınız");
			int sozlu = int.Parse(Console.ReadLine());


			var ortalama = (sınav1 + sınav2 + sozlu) / 3;

			if (ortalama >= 0 && ortalama < 25)
			{
				Console.WriteLine("Notunuz 0");
			}

			else if (ortalama >= 25 && ortalama < 45)
			{
				Console.WriteLine("Notunuz 1");
			}

			else if (ortalama >= 45 && ortalama < 55)
			{
				Console.WriteLine("Notunuz 2");
			}

			else if (ortalama >= 55 && ortalama < 70)
			{
				Console.WriteLine("Notunuz 3");
			}

			else if (ortalama >= 70 && ortalama < 85)
			{
				Console.WriteLine("Notunuz 4");
			}
			else if (ortalama >= 85 && ortalama < 100)
			{
				Console.WriteLine("Notunuz 5");
			}
			else
			{
				Console.WriteLine("Yanlış Not  Girdiniz");
			}
			Console.ReadLine();





		}
	}
}
