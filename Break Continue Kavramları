using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Döngüler_Break_Continue
{
	class Program
	{
		static void Main(string[] args)
		{


			string adSoyad = "Furkan Çakır";
			Console.ReadLine();
			for (int i = 0; i < adSoyad.Length; i++)
			{
				if (adSoyad[i] == 'ı')
					break;              // String içinde "ı" karakterini gördüğü gibi break ile çıkıcaktır.. Continue ile 'ı' yazmaz ve digerlerini yazmaya devat eder consolda "Furkan Çakr" Yazmıs olur.
				Console.WriteLine(adSoyad[i]);
				Console.ReadLine();
			}

			Console.ReadLine();
			Console.Write("Döngü Dışı");



			int x = 0;
			while (x < 5)
			{
				x++; // x++ yı buraya alarak sonsuz döngüden kurtulmuş oluruz.ve sadece 2 yazılmaz.
				if (x == 2)

					//break;
					continue;     //  2 ye geldigi an break ile döngü biticektir. buraya continue yazdıgımız zaman döngü sonsuz döngüye giricektir 2 olduğunda başa sarıcaktır 
				Console.Write(x);  // burada continue dediğimiz an sonsuz döngüye girmemesi için x++ yı yukarıya almamız lazım 
								   //x++;
				Console.ReadLine();
			}









		}
	}
}
